@page
@model Films.Pages.AdminModel
@{
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="d-flex flex-column align-items-center align-content-center justify-content-center m-3">
    <h2>Admin info</h2>
    <a class="btn btn btn-warning" style="color: white;" href="Create">Create new!</a>
    <table class="table w-100">
        <tbody>
            <tr>
                <th>Name</th>
                <th>Genre</th>
                <th>Produser</th>
                <th>Description</th>
                <th>Edit</th>
            </tr>
        </tbody>
        <tbody>
            @foreach (var film in Model.FilmsDb)
            {
                <tr>
                    <td>@film.Name</td>
                    <td>@film.Genre</td>
                    <td>@film.Produser</td>
                    <td>@film.Description</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@film.FilmDataId" style="color: white;" class="btn btn-warning" >Edit</a>
                    </td>
                    <td>
                        <a asp-page="./Delete" asp-route-id="@film.FilmDataId" style="color: white;" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="m-3 d-flex flex-row">
@*        <a href="Index" style="color: white;" class="btn btn-warning">Home</a>
*@    </div>
</div>
